{% extends 'base.html.twig' %}

{% block title %}Mes recettes{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% if not recipes.items is same as([]) %}
            <h1>Recettes de la communauté</h1>

            <div class="d-flex justify-content-center flex-wrap">
              {% for recipe in recipes %}
                <div class="card border-primary m-3" style="max-width: 20rem;">
                  <div class="card-header">Recette n° {{ recipe.id }}</div>
                  <div class="card-body">
                    <h4 class="card-title">{{ recipe.name }}</h4>
                    <p class="card-text">{{ recipe.description|slice(0, 100) ~ " ..." }}</p>
                  </div>
                </div>
              {% endfor %}
            </div>
        {% else %}
            Il n'y a pas de recettes.
        {% endif %}
    </div>
{% endblock %}
